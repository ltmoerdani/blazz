# ============================================================================
# Blazz Docker - Environment Variables Template
# ============================================================================
# Copy this file to .env and adjust values for your environment
# Usage: cp .env.docker.example .env
# ============================================================================

# Application
APP_NAME=Blazz
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=80
APP_SSL_PORT=443

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=blazz
DB_USERNAME=blazz
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Broadcasting (Reverb)
BROADCAST_DRIVER=reverb
REVERB_APP_ID=blazz
REVERB_APP_KEY=blazz-key
REVERB_APP_SECRET=blazz-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# WhatsApp Service
WHATSAPP_PORT=3001
WHATSAPP_SERVICE_URL=http://whatsapp:3001
NODE_ENV=development

# Mail (use Mailpit in development)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@blazz.test"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Filesystem
FILESYSTEM_DISK=local
